package com.example.pg.ds_examples.src.sort;

public class Dummy4 {

	public static void main(String[] args) {
		// Abcd === >dcba

		String str1 = null;
		String str2 = "dcba";
		// String reverse="";
		char[] ch = str1.toCharArray();
		/*
		 * for(int i=ch.length-1;i>=0;i--) { reverse += ch[i]; }
		 */
		try {
			StringBuffer sb = new StringBuffer(str1);
			sb.reverse();
			System.out.println(sb);

			if (String.valueOf(sb).equals(str2)) {
				System.out.println("strings are palindrome");
			} else {
				System.out.println("strings are not palindrome");
			}
		} catch (Exception e) {
			System.out.println("exception handled");
		}

	}

}
